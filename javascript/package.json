{
    "name": "quorum-middleware",
    "version": "0.4.0",
    "description": "Middleware between FPT Platform and Quorum Blockchain",
    "private": true,
    "repository": {
        "type": "git",
        "url": "git+https://github.com/FPT-Blockchain-Lab/quorum-middleware.git"
    },
    "author": "FPT Blockchain Lab <bot@fpt-blockchain-lab.com>",
    "license": "UNLICENSED",
    "bugs": {
        "url": "https://github.com/FPT-Blockchain-Lab/quorum-middleware/issues"
    },
    "dependencies": {
        "events": "^3.3.0",
        "web3": "^1.8.1",
        "web3-core": "^1.8.1",
        "web3-eth-abi": "^1.8.1",
        "web3-eth-contract": "^1.8.1",
        "web3-utils": "^1.8.1"
    },
    "main": "dist/middleware/index.js",
    "types": "dist/middleware/index.d.ts",
    "browser": "dist.browser/bundle.min.js",
    "scripts": {
        "pre-build:node": "rimraf dist && rimraf tsconfig.tsbuildinfo",
        "pre-build:browser": "rimraf dist.browser",
        "build:node": "yarn pre-build:node && tsc -b",
        "build:browser": "yarn pre-build:browser && webpack --mode production",
        "build": "yarn build:node && yarn build:browser",
        "test": "mocha -r ts-node/register ./test/*.test.ts"
    },
    "devDependencies": {
        "@types/chai": "^4.3.4",
        "@types/mocha": "^10.0.0",
        "chai": "^4.3.7",
        "clean-webpack-plugin": "^4.0.0",
        "mocha": "^10.1.0",
        "node-polyfill-webpack-plugin": "^2.0.1",
        "rimraf": "^3.0.2",
        "source-map-loader": "^4.0.1",
        "ts-loader": "^9.4.1",
        "ts-node": "^10.9.1",
        "typescript": "^4.9.3",
        "uglifyjs-webpack-plugin": "^2.2.0",
        "webpack": "^5.75.0",
        "webpack-bundle-analyzer": "^4.7.0",
        "webpack-cli": "^5.0.0"
    },
    "prettier": {
        "trailingComma": "es5",
        "tabWidth": 4,
        "semi": true,
        "singleQuote": false,
        "printWidth": 160
    }
}
